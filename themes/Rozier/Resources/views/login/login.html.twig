{% extends '@Rozier/login/base.html.twig' %}

{% block login_content %}
    {% if error %}
        <div data-uk-alert class="uk-alert uk-alert-danger">{{ error.message|trans }}</div>
    {% endif %}

    {% form_theme form '@Rozier/forms.html.twig' %}
    <form id="login-form"
          class="uk-form uk-form-stacked {% if error %}uk-animation-shake{% endif %}"
          action="{{ path('loginCheckPage') }}"
          method="post">
        {{ form_widget(form) }}
        <fieldset>
            <button class="uk-button" type="submit"><i class="uk-icon-sign-in"></i> {% trans %}login{% endtrans %}</button>
        </fieldset>
    </form>
{% endblock %}
