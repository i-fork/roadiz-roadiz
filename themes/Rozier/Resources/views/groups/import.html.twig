{% extends '@Rozier/layout.html.twig' %}

{% block content %}
<section class="content-global import-group">

    <header class="content-header header-group header-group-import">
        <h1 class="content-title group-import-title">{% trans %}import.group{% endtrans %}</h1>
    </header>

    <article class="content content-import">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form, { attr: { id: "import-group-form" }}) }}
            {{ form_widget(form) }}
            <button type="submit" class="uk-button uk-button-primary"><i class="uk-icon-rz-upload"></i> {% trans %}import{% endtrans %}</button>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
